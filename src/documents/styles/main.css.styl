// Enable nib
@import 'nib'
// Import normalize.css
@import 'normalize.css'

/* ============================================================================
SCSS VARIABLES
============================================================================ */

light_yellow_brown = #f7f1da
dark_blue          = #27437c
normal_blue        = #456fc4
light_blue         = #80afbf
normal_red         = #d24939
light_gray         = #5c5c5c
normal_gray        = #525252
dark_gray          = #3d3d3d
var_black          = #323232

background = #323232
foreground = #b8b8b8


// Font
@import url("http://fonts.googleapis.com/css?family=Source\+Sans\+Pro:400,200,200italic,300,300italic,400italic,600,600italic,700,700italic,900,900italic|Merriweather:400,300,300italic,400italic,700,700italic,900,900italic")
font       = "Source Sans Pro", Arial, sans-serif
title_font = Merriweather, Helvetica, sans-serif
mono_font  = "DejaVu Sans Mono", Menlo, Monaco, Consolas, monospace


/* ============================================================================
BASIC TAGS' STYLES
============================================================================ */

/* ----------------------------------------------------------------------------
Heading tags */

h1, h2, h3, h4, h5, h6
	line-height  1.2em
	font-family  title_font
	color  light_gray
	text-rendering  optimizelegibility
	margin-top  1em
	margin-bottom  0.5em

h1, h2
	font-weight  300
h3, h4, h5, h6
	font-weight  bold

h1
	font-size  2.5em
h2
	font-size  1.5em
h3
	font-size  1.25em
h4
	font-size  1.125em


/* ----------------------------------------------------------------------------
Anchor tags */

a:link, a:visited
	color  normal_blue
	background  inherit
	text-decoration  none
a:hover
	text-decoration  underline
a:focus
	outline  thin-dotted
a:active
	outline  thin-dotted


/* ----------------------------------------------------------------------------
Horizontal ruler */

// Nothing here yet...


/* ----------------------------------------------------------------------------
Code/pre styles */
code
	font  mono_font !important
	font-size  0.8em

// What `` generates when in Markdown, the <code> tag
code.inline-code
	background  dark_gray
	font-weight  bold
	padding  0.1em 0.18em
	margin  0
	border  1px solid normal_gray
	white-space  nowrap

// Styles for code blocks' container
pre
	line-height  1em
	border  1px solid normal_gray


/* ============================================================================
CONTAINER AND STUFF
============================================================================ */

*
	// Make width/height include margin/padding in calculation
	box-sizing  border-box
	// Font smoothing...
	text-shadow  1px 1px 1px rgba(0,0,0,0.004)
	line-height  1.3


// The "main" styles for the content
div#wrapper
	color  white
	background  var_black
	font-family  font
	font-size  1.05em
	font-weight  400
	margin  0 auto

html, body
	color  white
	background  var_black

/* ============================================================================
CONTENT RULES
============================================================================ */


main
	font-weight  400

	header
		border-bottom  1px normal_gray solid

/* ----------------------------------------------------------------------------
Post styles */

article
	// The post header and meta info
	header
		border-bottom  1px normal_gray solid
		padding-bottom  0.5em

		// The post title
		h1
			margin  0.3em 0 0.3em
			font-weight  400
			font-size 1.5em
			//text-transform  capitalize

		// The post meta stuff
		div#post-meta
			color  normal_gray
			font-size  0.8em


/* ============================================================================
FOOTER
============================================================================ */

footer
	background  background
	color  foreground
	text-align  center
	font-size  11px

	display  block
	border-top  1px normal_gray solid
	width  100%
	clear  both


