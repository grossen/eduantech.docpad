@import 'vars.inc'

div#wrapper
	width  95%
	text-align  center

	// The header, i.e. the logo and navigation
	header[role='banner']
		width  100%
		height  100%
		margin-top  10px
		margin-bottom  30px
		text-align  center

		// Social icons
		div#social-icons
			display  none

		// Navigation
		nav
			text-transform uppercase
			font-weight  bold

			a
				display  block

			a:link, a:visited
				color  foreground
				background  inherit
				text-decoration  none
				border-bottom  none
			a:hover, a:active
				text-decoration  none

			ul
				padding-left  0
				list-style  none

				li
					a
						padding  0.1em 0
						padding-left  0.3em

				li:hover
					background  dark_gray

				li#menu-current
					a
						color  normal_gray

	main
		clear  both

	footer
		margin-top  50px
